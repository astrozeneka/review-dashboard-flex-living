generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id             Int          @id @default(autoincrement())
  hostawayId     Int?          @unique // Original ID from Hostaway
  type           ReviewType
  rating         Int?         // Overall rating (1-10), nullable
  publicReview   String       @db.Text
  reviewCategory Json?        // Category ratings array
  submittedAt    DateTime
  guestName      String
  listingName    String
  
  // Optional fields for future use
  listingId      Int
  channel        String?      // e.g., "Airbnb", "Booking.com"
  
  // Dashboard management
  isPublished    Boolean      @default(false) // Show on public website
  
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  googleReviewUid String?     @unique // A hash uniquely generated to synchronize (in case Places_API is used)
}

enum ReviewType {
  HOST_TO_GUEST
  GUEST_TO_HOST
}

model ListingPlaceMapping {
  id            Int      @id @default(autoincrement())
  listingId     Int      @unique // Hostaway listing ID (one-to-one)
  googlePlaceId String   // Google Places API place_id
  
  // Optional metadata
  listingName   String?  // Store for reference/debugging
  placeName     String?  // Store for reference/debugging
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([googlePlaceId])
}